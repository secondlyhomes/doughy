{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    ":semanticCommits"
  ],
  "description": "Renovate configuration for React Native + Expo projects",
  "schedule": ["every weekend"],
  "timezone": "America/Los_Angeles",
  "labels": ["dependencies"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "rangeStrategy": "pin",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"]
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "packageRules": [
    {
      "description": "Auto-merge patch updates for non-critical packages",
      "matchUpdateTypes": ["patch"],
      "excludePackagePatterns": ["^expo", "^react-native", "^@supabase"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Group Expo packages together",
      "matchPackagePatterns": ["^expo", "^@expo"],
      "groupName": "expo packages",
      "groupSlug": "expo"
    },
    {
      "description": "Group React Native packages together",
      "matchPackagePatterns": ["^react-native", "^@react-native"],
      "groupName": "react-native packages",
      "groupSlug": "react-native"
    },
    {
      "description": "Group Supabase packages together",
      "matchPackagePatterns": ["^@supabase"],
      "groupName": "supabase packages",
      "groupSlug": "supabase"
    },
    {
      "description": "Group testing packages",
      "matchPackagePatterns": [
        "^jest",
        "^@testing-library",
        "^@types/jest",
        "ts-jest"
      ],
      "groupName": "testing packages",
      "groupSlug": "testing"
    },
    {
      "description": "Group TypeScript and ESLint packages",
      "matchPackagePatterns": [
        "^typescript",
        "^@typescript-eslint",
        "^eslint",
        "prettier"
      ],
      "groupName": "linting packages",
      "groupSlug": "linting"
    },
    {
      "description": "Group Sentry packages",
      "matchPackagePatterns": ["^@sentry"],
      "groupName": "sentry packages",
      "groupSlug": "sentry"
    },
    {
      "description": "Delay major version updates by 7 days",
      "matchUpdateTypes": ["major"],
      "stabilityDays": 7
    },
    {
      "description": "Delay minor version updates for critical packages",
      "matchPackagePatterns": ["^expo", "^react-native", "^@supabase"],
      "matchUpdateTypes": ["minor"],
      "stabilityDays": 3
    },
    {
      "description": "Require manual review for major Expo updates",
      "matchPackagePatterns": ["^expo"],
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "expo", "breaking"],
      "automerge": false
    },
    {
      "description": "Pin development dependencies",
      "matchDepTypes": ["devDependencies"],
      "rangeStrategy": "pin"
    },
    {
      "description": "Disable updates for packages we manage manually",
      "matchPackageNames": ["react", "react-dom"],
      "enabled": false
    }
  ],
  "ignoreDeps": [],
  "postUpdateOptions": ["npmDedupe"],
  "reviewers": [],
  "assignees": []
}
