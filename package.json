{
  "name": "doughy-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start:doughy": "npm start -w doughy",
    "start:bouncer": "npm start -w bouncer",
    "start:callpilot": "npm start -w callpilot",
    "postinstall": "patch-package",
    "prepare": "husky || true",
    "deploy:functions:stage": "supabase functions deploy --project-id lqmbyobweeaigrwmvizo",
    "deploy:functions:prod": "supabase functions deploy --project-id vpqglbaedcpeprnlnfxd",
    "db:types:stage": "supabase gen types typescript --project-id lqmbyobweeaigrwmvizo > apps/doughy/src/integrations/supabase/types/generated.ts",
    "db:types:prod": "supabase gen types typescript --project-id vpqglbaedcpeprnlnfxd > apps/doughy/src/integrations/supabase/types/generated.ts",
    "db:lint": "npx supabase db lint",
    "db:diff": "npx supabase db diff --schema public",
    "db:push": "npx supabase db push",
    "db:push:stage": "supabase db push --project-id lqmbyobweeaigrwmvizo",
    "db:push:prod": "supabase db push --project-id vpqglbaedcpeprnlnfxd"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "patch-package": "^8.0.1"
  }
}
